{
  "name": "@crpt/react-avatar",
  "version": "1.0.6",
  "description": "React avatar component",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "nwb build-react-component --copy-files",
    "clean": "nwb clean-module && nwb clean-demo",
    "start": "nwb serve-react-demo",
    "test": "NODE_ENV=test jest -u --no-cache",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch"
  },
  "dependencies": {
    "styled-components": "1.4.6 - 3"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "devDependencies": {
    "babel-jest": "^23.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "jest": "^23.0.1",
    "nwb": "0.21.x",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-test-renderer": "^16.4.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-inline-react-svg": "^0.5.2",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-inline-environment-variables": "^0.3.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1"
  },
  "author": "",
  "homepage": "https://github.com/crptteam/react-avatar",
  "license": "MIT",
  "repository": "https://github.com/crptteam/react-avatar",
  "keywords": [
    "react-component"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "verbose": true,
    "transformIgnorePatterns": [
      "/node_modules/(?!react).+(js|jsx)$"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "setupFiles": [
      "./tests/jestsetup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      "transform-class-properties",
      "transform-es2015-destructuring",
      "transform-object-rest-spread",
      "transform-inline-environment-variables",
      "transform-es2015-modules-commonjs",
      [
        "styled-components",
        {
          "ssr": false,
          "minify": false,
          "displayName": true,
          "preprocess": false,
          "transpileTemplateLiterals": false
        }
      ],
      "inline-react-svg"
    ],
    "env": {
      "production": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      },
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  }
}
